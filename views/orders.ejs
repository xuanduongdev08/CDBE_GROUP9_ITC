<%- include('partials/header') %>

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Đơn Hàng Của Tôi</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Đơn hàng</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Orders Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-shopping-bag me-2"></i>Lịch Sử Đơn Hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã Đơn</th>
                                            <th>Ngày Đặt</th>
                                            <th>Tổng Tiền</th>
                                            <th>Trạng Thái</th>
                                            <th>Thanh Toán</th>
                                            <th>Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach((order) => { %>
                                            <tr>
                                                <td><strong>#<%= order._id.toString().substring(0, 8) %></strong></td>
                                                <td><%= new Date(order.order_date).toLocaleDateString('vi-VN', { 
                                                    year: 'numeric', 
                                                    month: '2-digit', 
                                                    day: '2-digit',
                                                    hour: '2-digit',
                                                    minute: '2-digit'
                                                }) %></td>
                                                <td><strong class="text-primary"><%= new Intl.NumberFormat('vi-VN').format(order.total_amount) %> VNĐ</strong></td>
                                                <td>
                                                    <% 
                                                        const statusColors = {
                                                            'pending': 'warning',
                                                            'processing': 'info',
                                                            'shipped': 'primary',
                                                            'delivered': 'success',
                                                            'cancelled': 'danger'
                                                        };
                                                        const statusTexts = {
                                                            'pending': 'Chờ xử lý',
                                                            'processing': 'Đang xử lý',
                                                            'shipped': 'Đang giao hàng',
                                                            'delivered': 'Đã nhận',
                                                            'cancelled': 'Đã hủy'
                                                        };
                                                    %>
                                                    <span class="badge bg-<%= statusColors[order.status] || 'secondary' %> rounded-pill">
                                                        <%= statusTexts[order.status] || order.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= order.payment_status === 'paid' ? 'success' : order.payment_status === 'refunded' ? 'danger' : 'warning' %> rounded-pill">
                                                        <%= order.payment_status === 'paid' ? 'Đã thanh toán' : order.payment_status === 'refunded' ? 'Đã hoàn tiền' : 'Chưa thanh toán' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-2 flex-wrap">
                                                        <a href="/orders/<%= order._id %>" class="btn btn-sm btn-primary rounded-pill">
                                                            <i class="fas fa-eye me-1"></i>Xem chi tiết
                                                        </a>
                                                        <% if (order.status === 'pending' || order.status === 'processing') { %>
                                                            <button class="btn btn-sm btn-danger rounded-pill cancel-order-btn" data-order-id="<%= order._id %>">
                                                                <i class="fas fa-times me-1"></i>Hủy đơn
                                                            </button>
                                                        <% } %>
                                                        <% if (order.status === 'cancelled' || order.status === 'delivered') { %>
                                                            <button class="btn btn-sm btn-success rounded-pill reorder-btn" data-order-id="<%= order._id %>">
                                                                <i class="fas fa-redo me-1"></i>Mua lại
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-shopping-bag fa-4x text-muted mb-3"></i>
                                <h5 class="text-muted">Bạn chưa có đơn hàng nào</h5>
                                <p class="text-muted">Hãy bắt đầu mua sắm ngay!</p>
                                <a href="/shop" class="btn btn-primary rounded-pill mt-3">
                                    <i class="fas fa-shopping-cart me-2"></i>Mua sắm ngay
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Orders End -->

<script>
// Cancel Order
document.querySelectorAll('.cancel-order-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        const orderId = this.getAttribute('data-order-id');
        if (!confirm('Bạn có chắc chắn muốn hủy đơn hàng này không?')) {
            return;
        }
        
        const btnElement = this;
        const row = btnElement.closest('tr');
        btnElement.disabled = true;
        btnElement.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Đang xử lý...';
        
        fetch(`/orders/${orderId}/cancel`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Đơn hàng đã được hủy thành công!');
                location.reload();
            } else {
                alert('Lỗi: ' + data.error);
                btnElement.disabled = false;
                btnElement.innerHTML = '<i class="fas fa-times me-1"></i>Hủy đơn';
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Có lỗi xảy ra. Vui lòng thử lại.');
            btnElement.disabled = false;
            btnElement.innerHTML = '<i class="fas fa-times me-1"></i>Hủy đơn';
        });
    });
});

// Reorder
document.querySelectorAll('.reorder-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        const orderId = this.getAttribute('data-order-id');
        
        const btnElement = this;
        btnElement.disabled = true;
        btnElement.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Đang thêm...';
        
        fetch(`/orders/${orderId}/reorder`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                if (confirm(data.message + '\n\nBạn có muốn xem giỏ hàng không?')) {
                    window.location.href = '/cart';
                } else {
                    location.reload();
                }
            } else {
                alert('Lỗi: ' + data.error);
                btnElement.disabled = false;
                btnElement.innerHTML = '<i class="fas fa-redo me-1"></i>Mua lại';
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Có lỗi xảy ra. Vui lòng thử lại.');
            btnElement.disabled = false;
            btnElement.innerHTML = '<i class="fas fa-redo me-1"></i>Mua lại';
        });
    });
});
</script>

<%- include('partials/footer') %>

