<%- include('../partials/admin-header', { page: 'orders', title: 'Quản Lý Đơn Hàng', user: typeof user !== 'undefined' ? user : null }) %>

                    <div class="card admin-card wow fadeInUp" data-wow-delay="0.1s">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-shopping-cart me-2 text-primary"></i>Danh Sách Đơn Hàng
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Mã Đơn</th>
                                            <th>Khách Hàng</th>
                                            <th>Ngày Đặt</th>
                                            <th>Tổng Tiền</th>
                                            <th>Trạng Thái</th>
                                            <th>Thanh Toán</th>
                                            <th>Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                                            <% orders.forEach((order, index) => { %>
                                                <tr>
                                                    <td><strong><%= index + 1 %></strong></td>
                                                    <td><strong>#<%= order._id.toString().substring(0, 8) %></strong></td>
                                                    <td><%= order.user_id ? order.user_id.full_name : 'Khách vãng lai' %></td>
                                                    <td><%= new Date(order.order_date).toLocaleDateString('vi-VN') %></td>
                                                    <td><strong class="text-primary"><%= new Intl.NumberFormat('vi-VN').format(order.total_amount) %> VNĐ</strong></td>
                                                    <td>
                                                        <% 
                                                            const statusColors = {
                                                                'pending': 'warning',
                                                                'processing': 'info',
                                                                'shipped': 'primary',
                                                                'delivered': 'success',
                                                                'cancelled': 'danger'
                                                            };
                                                            const statusTexts = {
                                                                'pending': 'Chờ xử lý',
                                                                'processing': 'Đang xử lý',
                                                                'shipped': 'Đã giao hàng',
                                                                'delivered': 'Đã nhận',
                                                                'cancelled': 'Đã hủy'
                                                            };
                                                        %>
                                                        <span class="badge bg-<%= statusColors[order.status] || 'secondary' %> rounded-pill">
                                                            <%= statusTexts[order.status] || order.status %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-<%= order.payment_status === 'paid' ? 'success' : 'warning' %> rounded-pill">
                                                            <%= order.payment_status === 'paid' ? 'Đã thanh toán' : 'Chưa thanh toán' %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-2 align-items-center" style="flex-wrap: nowrap;">
                                                            <a href="/admin/orders/<%= order._id %>" class="btn btn-sm btn-primary rounded-pill" style="white-space: nowrap;">
                                                                <i class="fas fa-eye me-1"></i>Xem
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="8" class="text-center py-5">
                                                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                                    <p class="text-muted">Chưa có đơn hàng nào</p>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

<%- include('../partials/admin-footer') %>
