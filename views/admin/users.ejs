<%- include('../partials/admin-header', { page: 'users', title: 'Quản Lý Người Dùng', user: typeof user !== 'undefined' ? user : null }) %>

                    <div class="card admin-card wow fadeInUp" data-wow-delay="0.1s">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-users me-2 text-primary"></i>Danh Sách Người Dùng
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width: 80px;">STT</th>
                                            <th>Họ Tên</th>
                                            <th>Email</th>
                                            <th style="width: 130px;">Số Điện Thoại</th>
                                            <th style="width: 180px;">Ngày Đăng Ký</th>
                                            <th>Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (typeof users !== 'undefined' && users.length > 0) { %>
                                            <% users.forEach((user, index) => { %>
                                                <tr>
                                                    <td><strong class="text-primary"><%= index + 1 %></strong></td>
                                                    <td><%= user.full_name %></td>
                                                    <td><%= user.email %></td>
                                                    <td>
                                                        <% if (user.phone) { %>
                                                            <%= user.phone %>
                                                        <% } else { %>
                                                            <span class="text-muted">N/A</span>
                                                        <% } %>
                                                    </td>
                                                    <td><%= new Date(user.created_at).toLocaleDateString('vi-VN') %></td>
                                                    <td>
                                                        <a href="/admin/users/<%= user._id %>/orders" class="btn btn-sm btn-primary rounded-pill" style="white-space: nowrap;">
                                                            <i class="fas fa-shopping-bag me-1"></i>Lịch sử mua hàng
                                                        </a>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6" class="text-center py-5">
                                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                                    <p class="text-muted">Chưa có người dùng nào</p>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

<%- include('../partials/admin-footer') %>
