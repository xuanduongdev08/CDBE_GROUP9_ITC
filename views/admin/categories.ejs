<%- include('../partials/admin-header', { page: 'categories', title: 'Quản Lý Danh Mục', user: typeof user !== 'undefined' ? user : null }) %>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="mb-0"></h3>
                        <button class="btn btn-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                            <i class="fas fa-plus me-2"></i>Thêm Danh Mục
                        </button>
                    </div>

                    <div class="card admin-card wow fadeInUp" data-wow-delay="0.1s">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-tags me-2 text-primary"></i>Danh Sách Danh Mục
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width: 80px;">STT</th>
                                            <th>Tên Danh Mục</th>
                                            <th>Mô Tả</th>
                                            <th>Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                                            <% categories.forEach((category, index) => { %>
                                                <tr>
                                                    <td><strong class="text-primary"><%= index + 1 %></strong></td>
                                                    <td>
                                                        <span class="badge bg-primary rounded-pill">
                                                            <%= category.name %>
                                                        </span>
                                                    </td>
                                                    <td><%= category.description || '<span class="text-muted">N/A</span>' %></td>
                                                    <td>
                                                        <div class="d-flex gap-2 align-items-center" style="flex-wrap: nowrap;">
                                                            <a href="/shop?category=<%= category._id %>" target="_blank" class="btn btn-sm btn-primary rounded-pill" style="white-space: nowrap;">
                                                                <i class="fas fa-eye me-1"></i>Xem
                                                            </a>
                                                            <button class="btn btn-sm btn-warning rounded-pill" style="white-space: nowrap;">
                                                                <i class="fas fa-edit me-1"></i>Sửa
                                                            </button>
                                                            <button class="btn btn-sm btn-danger rounded-pill" style="white-space: nowrap;">
                                                                <i class="fas fa-trash me-1"></i>Xóa
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4" class="text-center py-5">
                                                    <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                                                    <p class="text-muted">Chưa có danh mục nào</p>
                                                    <button class="btn btn-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                                                        <i class="fas fa-plus me-2"></i>Thêm Danh Mục Đầu Tiên
                                                    </button>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

<%- include('../partials/admin-footer') %>
