<%- include('../partials/admin-header', { page: 'contacts', title: 'Quản Lý Liên Hệ', user: typeof user !== 'undefined' ? user : null }) %>

                    <div class="card admin-card wow fadeInUp" data-wow-delay="0.1s">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-envelope me-2 text-primary"></i>Danh Sách Tin Nhắn Liên Hệ
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Họ Tên</th>
                                            <th>Email</th>
                                            <th>Chủ Đề</th>
                                            <th>Trạng Thái</th>
                                            <th>Ngày Gửi</th>
                                            <th>Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (typeof contacts !== 'undefined' && contacts.length > 0) { %>
                                            <% contacts.forEach(contact => { %>
                                                <tr>
                                                    <td><strong>#<%= contact._id.toString().substring(0, 8) %></strong></td>
                                                    <td><%= contact.full_name %></td>
                                                    <td><%= contact.email %></td>
                                                    <td><%= contact.subject || '<span class="text-muted">N/A</span>' %></td>
                                                    <td>
                                                        <span class="badge bg-<%= contact.status === 'Chưa xử lý' ? 'warning' : contact.status === 'Đã phản hồi' ? 'success' : 'info' %> rounded-pill">
                                                            <%= contact.status %>
                                                        </span>
                                                    </td>
                                                    <td><%= new Date(contact.created_at).toLocaleDateString('vi-VN') %></td>
                                                    <td>
                                                        <button class="btn btn-sm btn-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#viewModal<%= contact._id %>">
                                                            <i class="fas fa-eye me-1"></i>Xem
                                                        </button>
                                                    </td>
                                                </tr>
                                                <!-- Modal -->
                                                <div class="modal fade" id="viewModal<%= contact._id %>" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Chi Tiết Liên Hệ</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p><strong>Họ Tên:</strong> <%= contact.full_name %></p>
                                                                <p><strong>Email:</strong> <%= contact.email %></p>
                                                                <p><strong>Chủ Đề:</strong> <%= contact.subject || 'N/A' %></p>
                                                                <p><strong>Tin Nhắn:</strong></p>
                                                                <p><%= contact.message %></p>
                                                                <p><strong>Trạng Thái:</strong> 
                                                                    <span class="badge bg-<%= contact.status === 'Chưa xử lý' ? 'warning' : contact.status === 'Đã phản hồi' ? 'success' : 'info' %> rounded-pill">
                                                                        <%= contact.status %>
                                                                    </span>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="7" class="text-center py-5">
                                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                    <p class="text-muted">Chưa có tin nhắn nào</p>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

<%- include('../partials/admin-footer') %>
