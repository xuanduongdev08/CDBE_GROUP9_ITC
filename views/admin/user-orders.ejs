<%- include('../partials/admin-header', { page: 'users', title: 'Lịch Sử Mua Hàng', user: typeof user !== 'undefined' ? user : null }) %>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <a href="/admin/users" class="btn btn-outline-secondary rounded-pill mb-2">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <h3 class="mb-0 mt-2">
                                <i class="fas fa-user me-2 text-primary"></i>Lịch Sử Mua Hàng - <%= targetUser.full_name %>
                            </h3>
                            <p class="text-muted mb-0 mt-2">
                                <i class="fas fa-envelope me-1"></i><%= targetUser.email %>
                                <% if (targetUser.phone) { %>
                                    | <i class="fas fa-phone me-1"></i><%= targetUser.phone %>
                                <% } %>
                            </p>
                        </div>
                    </div>

                    <!-- User Stats Card -->
                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <div class="card admin-card" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white;">
                                <div class="card-body">
                                    <h6 class="text-white-50 mb-2">Tổng Đơn Hàng</h6>
                                    <h2 class="mb-0"><%= orders.length %></h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card admin-card" style="background: linear-gradient(135deg, #ff8e53 0%, #ff6b6b 100%); color: white;">
                                <div class="card-body">
                                    <h6 class="text-white-50 mb-2">Tổng Chi Tiêu</h6>
                                    <h2 class="mb-0">
                                        <%= new Intl.NumberFormat('vi-VN').format(
                                            orders.reduce((sum, order) => sum + (order.total_amount || 0), 0)
                                        ) %> VNĐ
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card admin-card" style="background: linear-gradient(135deg, #ffa726 0%, #ff7043 100%); color: white;">
                                <div class="card-body">
                                    <h6 class="text-white-50 mb-2">Đơn Đã Giao</h6>
                                    <h2 class="mb-0">
                                        <%= orders.filter(o => o.status === 'delivered').length %>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Orders List -->
                    <div class="card admin-card wow fadeInUp" data-wow-delay="0.1s">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-shopping-bag me-2 text-primary"></i>Danh Sách Đơn Hàng
                            </h5>
                        </div>
                        <div class="card-body">
                            <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                                <div class="accordion" id="ordersAccordion">
                                    <% orders.forEach((order, index) => { %>
                                        <% 
                                            const statusColors = {
                                                'pending': 'warning',
                                                'processing': 'info',
                                                'shipped': 'primary',
                                                'delivered': 'success',
                                                'cancelled': 'danger'
                                            };
                                            const statusTexts = {
                                                'pending': 'Chờ xử lý',
                                                'processing': 'Đang xử lý',
                                                'shipped': 'Đã giao hàng',
                                                'delivered': 'Đã nhận',
                                                'cancelled': 'Đã hủy'
                                            };
                                        %>
                                        <div class="accordion-item mb-2">
                                            <h2 class="accordion-header" id="heading<%= index %>">
                                                <button class="accordion-button <%= index !== 0 ? 'collapsed' : '' %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="<%= index === 0 ? 'true' : 'false' %>" aria-controls="collapse<%= index %>">
                                                    <div class="d-flex justify-content-between align-items-center w-100 me-3">
                                                        <div>
                                                            <strong>Đơn hàng #<%= order._id.toString().substring(0, 8) %></strong>
                                                            <span class="badge bg-<%= statusColors[order.status] || 'secondary' %> rounded-pill ms-2">
                                                                <%= statusTexts[order.status] || order.status %>
                                                            </span>
                                                        </div>
                                                        <div class="text-end">
                                                            <div><strong class="text-primary"><%= new Intl.NumberFormat('vi-VN').format(order.total_amount || 0) %> VNĐ</strong></div>
                                                            <small class="text-muted"><%= new Date(order.order_date).toLocaleDateString('vi-VN') %></small>
                                                        </div>
                                                    </div>
                                                </button>
                                            </h2>
                                            <div id="collapse<%= index %>" class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>" aria-labelledby="heading<%= index %>" data-bs-parent="#ordersAccordion">
                                                <div class="accordion-body">
                                                    <div class="row mb-3">
                                                        <div class="col-md-6">
                                                            <strong>Ngày đặt:</strong>
                                                            <p class="mb-0"><%= new Date(order.order_date).toLocaleString('vi-VN') %></p>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <strong>Trạng thái thanh toán:</strong>
                                                            <p class="mb-0">
                                                                <span class="badge bg-<%= order.payment_status === 'paid' ? 'success' : 'warning' %> rounded-pill">
                                                                    <%= order.payment_status === 'paid' ? 'Đã thanh toán' : order.payment_status === 'refunded' ? 'Đã hoàn tiền' : 'Chưa thanh toán' %>
                                                                </span>
                                                            </p>
                                                        </div>
                                                        <% if (order.payment_method_id) { %>
                                                        <div class="col-md-6 mt-2">
                                                            <strong>Phương thức thanh toán:</strong>
                                                            <p class="mb-0"><%= order.payment_method_id.name %></p>
                                                        </div>
                                                        <% } %>
                                                        <% if (order.address_id) { %>
                                                        <div class="col-md-6 mt-2">
                                                            <strong>Địa chỉ giao hàng:</strong>
                                                            <p class="mb-0">
                                                                <%= order.address_id.recipient_name %><br>
                                                                <%= order.address_id.phone %><br>
                                                                <%= order.address_id.address_line %>, 
                                                                <%= order.address_id.city %>, 
                                                                <%= order.address_id.province %>
                                                            </p>
                                                        </div>
                                                        <% } %>
                                                    </div>
                                                    
                                                    <hr>
                                                    
                                                    <h6 class="mb-3">Sản phẩm trong đơn:</h6>
                                                    <div class="table-responsive">
                                                        <table class="table table-sm">
                                                            <thead>
                                                                <tr>
                                                                    <th>STT</th>
                                                                    <th>Sản phẩm</th>
                                                                    <th>Giá</th>
                                                                    <th>Số lượng</th>
                                                                    <th>Thành tiền</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% if (order.items && order.items.length > 0) { %>
                                                                    <% order.items.forEach((item, itemIndex) => { %>
                                                                        <tr>
                                                                            <td><%= itemIndex + 1 %></td>
                                                                            <td>
                                                                                <% if (item.product_id) { %>
                                                                                    <strong><%= item.product_id.name %></strong>
                                                                                <% } else { %>
                                                                                    <span class="text-muted">Sản phẩm đã bị xóa</span>
                                                                                <% } %>
                                                                            </td>
                                                                            <td><%= new Intl.NumberFormat('vi-VN').format(item.price || 0) %> VNĐ</td>
                                                                            <td><%= item.quantity || 0 %></td>
                                                                            <td><strong class="text-primary"><%= new Intl.NumberFormat('vi-VN').format((item.price || 0) * (item.quantity || 0)) %> VNĐ</strong></td>
                                                                        </tr>
                                                                    <% }); %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="5" class="text-center text-muted">Không có sản phẩm</td>
                                                                    </tr>
                                                                <% } %>
                                                                <tr style="background-color: #f8f9fa;">
                                                                    <td colspan="4" class="text-end"><strong>Tổng cộng:</strong></td>
                                                                    <td><strong class="text-primary"><%= new Intl.NumberFormat('vi-VN').format(order.total_amount || 0) %> VNĐ</strong></td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    
                                                    <div class="mt-3">
                                                        <a href="/admin/orders/<%= order._id %>" class="btn btn-sm btn-primary rounded-pill">
                                                            <i class="fas fa-eye me-1"></i>Xem chi tiết
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Người dùng này chưa có đơn hàng nào</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

<%- include('../partials/admin-footer') %>

