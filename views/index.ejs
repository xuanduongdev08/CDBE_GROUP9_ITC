<%- include('partials/header', { page: 'home' , categories: typeof categories !=='undefined' ? categories : [] }) %>

    <!-- Top Promo Bar -->
    <div class="container-fluid bg-gradient py-2 text-center"
        style="background: linear-gradient(90deg, #ff6b6b, #ff8e53);">
        <p class="mb-0 fw-bold text-white">
